{
	"name": "miniapp",
	"productName": "Mini App",
	"description": "A minimal electron app using webpack, TypeScript & React",
	"version": "1.9.0",
	"license": "MIT",
	"author": {
		"name": "Bader Nasser Al-Hashmi",
		"email": "BaderSur@gmail.com",
		"url": "https://bader-nasser.netlify.app/en/"
	},
	"repository": "badersur/miniapp",
	"bugs": "https://github.com/badersur/miniapp/issues",
	"engines": {
		"node": ">=12.16.0",
		"yarn": ">=1.22.0"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"dev": "electron-webpack dev",
		"compile": "electron-webpack",
		"build": "electron-builder",
		"pack": "run-s compile \"build -- --dir\"",
		"dir": "run-s pack",
		"dist:os": "run-s compile build",
		"dist": "run-s compile \"build -- --macos --linux --windows\"",
		"release": "run-s compile \"build -- --macos --linux --windows --publish always\"",
		"lint:scripts": "xo",
		"lint:prettier": "prettier -c .",
		"lint": "run-s lint:*",
		"fmt:scripts": "xo --fix",
		"fmt:prettier": "prettier --write .",
		"fmt": "run-s fmt:*",
		"type-check": "tsc --noEmit",
		"test": "run-s type-check lint",
		"amend": "git commit --amend --no-edit --date=\"$(date)\"",
		"amend-all": "run-s \"amend -- --all\"",
		"amend-q": "cross-env HUSKY_SKIP_HOOKS=1 run-s amend",
		"amend-all-q": "cross-env HUSKY_SKIP_HOOKS=1 run-s amend-all",
		"push-f": "git push -f"
	},
	"dependencies": {
		"got": "^11.8.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-helmet": "^6.1.0",
		"source-map-support": "^0.5.19",
		"yargs": "^16.1.1"
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@babel/preset-react": "^7.12.5",
		"@types/node": "^14.14.7",
		"@types/react": "^16.9.56",
		"@types/react-dom": "^16.9.9",
		"@types/react-helmet": "^6.1.0",
		"@types/yargs": "^15.0.5",
		"@typescript-eslint/eslint-plugin": "^4.8.1",
		"@typescript-eslint/parser": "^4.8.1",
		"cross-env": "^7.0.2",
		"electron": "^11.0.1",
		"electron-builder": "^22.8.1",
		"electron-webpack": "^2.8.2",
		"electron-webpack-ts": "^4.0.1",
		"eslint": "^7.13.0",
		"eslint-config-xo": "^0.33.1",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-config-xo-typescript": "^0.35.0",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^4.3.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.2",
		"typescript": "^4.0.5",
		"webpack": "^4.0.0",
		"xo": "^0.34.2"
	},
	"electronWebpack": {
		"main": {
			"extraEntries": [
				"@/preload.ts"
			]
		},
		"renderer": {
			"template": "src/renderer/index.html"
		}
	},
	"build": {
		"appId": "om.badersur.miniapp",
		"mac": {
			"category": "public.app-category.utilities"
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"snap",
				"AppImage",
				"deb"
			],
			"category": "Utility"
		},
		"snap": {
			"publish": "github"
		},
		"win": {
			"verifyUpdateCodeSignature": false,
			"target": [
				{
					"target": "nsis",
					"arch": "x64"
				},
				{
					"target": "nsis-web",
					"arch": [
						"x64",
						"ia32",
						"arm64"
					]
				}
			]
		}
	},
	"xo": {
		"envs": [
			"es2020",
			"node",
			"browser"
		],
		"extends": [
			"xo-react",
			"plugin:jsx-a11y/recommended",
			"plugin:jsx-a11y/strict"
		],
		"plugins": [
			"jsx-a11y"
		],
		"prettier": true,
		"rules": {
			"capitalized-comments": "off",
			"import/no-unassigned-import": "warn",
			"react/state-in-constructor": "warn",
			"react/jsx-tag-spacing": [
				"error",
				{
					"closingSlash": "never",
					"afterOpening": "never",
					"beforeClosing": "never",
					"beforeSelfClosing": "always"
				}
			]
		}
	},
	"prettier": {
		"semi": true,
		"useTabs": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"singleQuote": true,
		"bracketSpacing": false,
		"jsxBracketSameLine": false,
		"overrides": [
			{
				"files": [
					"*.yml",
					"*.yaml"
				],
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "run-s test pack"
		}
	}
}
