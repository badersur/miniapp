{
  "name": "miniapp",
  "productName": "Mini App",
  "description": "A minimal electron app using webpack, TypeScript & React",
  "version": "1.0.1-next",
  "license": "MIT",
  "author": {
    "name": "Bader Nasser Al-Hashmi",
    "email": "BaderSur@gmail.com"
  },
  "repository": "badersur/miniapp",
  "engines": {
    "node": ">=12.14.1",
    "yarn": ">=1.22.4"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "build": "electron-builder",
    "dist": "run-s compile build",
    "dist:dir": "run-s compile \"build -- --dir\"",
    "dist:all": "run-s compile \"build -- --macos --linux --windows\"",
    "lint:xo": "xo",
    "lint:prettier": "prettier -c .",
    "lint": "run-s lint:*",
    "fmt:xo": "xo --fix",
    "fmt:prettier": "prettier --write .",
    "fmt": "run-s fmt:*",
    "type-check": "tsc --noEmit",
    "test": "run-s type-check lint",
    "amend": "git commit --amend --no-edit --date=\"$(date)\"",
    "amend-all": "run-s \"amend -- --all\"",
    "push-f": "git push -f"
  },
  "dependencies": {
    "node-fetch": "^3.0.0-beta.8",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "source-map-support": "^0.5.19",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.10.4",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@types/yargs": "^15.0.5",
    "electron": "9.2.0",
    "electron-builder": "^22.8.0",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "xo": "^0.33.0"
  },
  "xo": {
    "extends": "xo-react",
    "envs": [
      "es2020",
      "node",
      "browser"
    ],
    "prettier": true,
    "rules": {
      "capitalized-comments": "off",
      "react/state-in-constructor": "warn",
      "react/jsx-tag-spacing": [
        "warn",
        {
          "closingSlash": "never",
          "beforeSelfClosing": "always",
          "afterOpening": "never",
          "beforeClosing": "allow"
        }
      ]
    }
  },
  "build": {
    "appId": "om.badersur.miniapp",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "snap",
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility"
    },
    "snap": {
      "publish": "github"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName} portable ${version}.${ext}"
    }
  },
  "prettier": {
    "semi": true,
    "useTabs": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "singleQuote": true,
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "overrides": [
      {
        "files": [
          "*.yml",
          "*.yaml",
          "package.json"
        ],
        "options": {
          "useTabs": false,
          "tabWidth": 2
        }
      }
    ]
  },
  "electronWebpack": {
    "main": {
      "extraEntries": [
        "@/preload.ts"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s test"
    }
  }
}
